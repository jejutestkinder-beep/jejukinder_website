---
const { title = '제주 발도르프 킨더' } = Astro.props;
---

<!doctype html>
<html lang="ko">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<script src="https://identity.netlify.com/v1/netlify-identity-widget.js"></script>
		<title>{title}</title>
	</head>

	<body>
		<header>
			<nav>
				<a href="/">Home</a>
				<a href="/about/">킨더 소개</a>
				<a href="/waldorf/">발도르프 교육이란</a>
				<a href="/admission/">입학 문의</a>
				<a href="/notices/">공지사항</a>
				<a href="/board/">게시판</a>
			</nav>
		</header>

		<main>
			<slot />
		</main>

		<footer>
			<p>© {new Date().getFullYear()} 제주 발도르프 킨더</p>
		</footer>
		<script is:inline>
  (function () {
    // 위젯 로드 안 됐으면 끝
    if (!window.netlifyIdentity) return;

    function openIfTokenPresent() {
      const hash = window.location.hash || "";

      // Netlify Identity 이메일 링크는 보통 이런 hash를 달고 옴:
      // #invite_token=...
      // #recovery_token=...
      // #confirmation_token=...
      const hasIdentityToken =
        hash.includes("invite_token=") ||
        hash.includes("recovery_token=") ||
        hash.includes("confirmation_token=");

      if (!hasIdentityToken) return;

      // 위젯 열기 (비번 설정/리셋 모달이 떠야 정상)
      window.netlifyIdentity.open();
    }

    window.netlifyIdentity.on("init", openIfTokenPresent);
    // init이 이미 끝났을 수도 있어서 한 번 더
    setTimeout(openIfTokenPresent, 0);
  })();
</script>
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
		font-family: system-ui, -apple-system, BlinkMacSystemFont, sans-serif;
	}

	header {
		padding: 16px 24px;
		border-bottom: 1px solid #eee;
	}

	nav a {
		margin-right: 16px;
		text-decoration: none;
		color: #333;
	}

	main {
		padding: 32px 24px;
	}

	footer {
		padding: 24px;
		border-top: 1px solid #eee;
		font-size: 14px;
		color: #666;
	}
</style>