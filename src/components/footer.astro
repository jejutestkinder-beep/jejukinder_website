---
import instagramIcon from '../assets/social_insta.svg';
import youtubeIcon from '../assets/social_youtube.svg';
import naverIcon from '../assets/social_naver.png';

const socialLinks = [
  {
    platform: 'instagram',
    href: 'https://www.instagram.com/jeju_waldorf_kinder',
    displayName: '제주 발도르프 어린이집',
    iconSrc: instagramIcon
  },
  {
    platform: '제주자유발도르프학교',
    href: 'https://blog.naver.com/jeju_waldorf',
    displayName: '제주자유발도르프학교',
    iconSrc: naverIcon
  },
  {
    platform: 'youtube',
    href: 'https://www.youtube.com/@제주발도르프',
    displayName: '제주자유발도르프유튜브',
    iconSrc: youtubeIcon
  }
];
---

<footer class="bg-custom-footerBg py-8 px-3 sm:py-10 sm:px-6 text-sm text-custom-grey">
  <div class="max-w-[1200px] mt-xl mx-auto flex flex-col items-center gap-4">
    <div class="flex gap-4">
      {socialLinks.map((link) => (
        <a href={link.href} target="_blank" rel="noopener noreferrer" class="group flex items-center gap-2 hover:opacity-80 transition-opacity">
          {link.iconSrc ? (
            <img src={link.iconSrc.src} alt={link.platform} class="w-7 h-7 transition-all duration-300 group-hover:scale-110" />
          ) : (
            <svg class="transition-all duration-300 group-hover:scale-110" xmlns="http://www.w3.org/2000/svg" width="28" height="28" viewBox="0 0 32 32"><path d="M16,2C8.268,2,2,8.268,2,16s6.268,14,14,14,14-6.268,14-14S23.732,2,16,2ZM8.5,16c0-1.5,.5-3,1-4.5,.5-1,1-2,2-2.5,.5-.5,1.5-.5,2-.5h.5c.5,0,1,.5,1.5,1,.5,.5,.5,1.5,.5,2,0,1-.5,2-1,3-.5,1-1.5,2-2.5,2.5-1,.5-2,.5-3,.5h-.5c-.5,0-.5-.5-.5-1ZM16,28c-2.485,0-4.773-.759-6.682-2.051,.333-1.584,1.336-2.911,2.682-3.575,1.5-.739,3.182-1.151,4.882-1.151,.129,0,.256,.009,.384,.013-.238,.711-.383,1.463-.383,2.248,0,1.911,.793,3.638,2.066,4.867-1.042,.403-2.164,.649-3.349,.649ZM23.5,16c0,1.5-.5,3-1,4.5-.5,1-1,2-2,2.5-.5,.5-1.5,.5-2,.5h-.5c-.5,0-1-.5-1.5-1-.5-.5-.5-1.5-.5-2,0-1,.5-2,1-3,.5-1,1.5-2,2.5-2.5,1-.5,2-.5,3-.5h.5c.5,0,.5,.5,.5,1Z" fill="currentColor"/></svg>
          )}
          <span class="hidden sm:inline">{link.displayName}</span>
        </a>
      ))}
    </div>
    <div class="text-center text-custom-grey">
      <p class="text-sm my-1">© {new Date().getFullYear()} 제주발도르프어린이집</p>
      <p class="text-sm my-1">제주시 한경면 청수로 218</p>
      <p class="text-sm my-1">064.803.3050</p>
    </div>
  </div>
</footer>