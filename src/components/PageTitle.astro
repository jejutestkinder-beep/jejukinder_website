---
interface Props {
  subtitle?: string;
  class?: string;
}

const { subtitle, class: className = '' } = Astro.props;
---

<div class={`mb-8 ${className}`}>
  <h1 class="text-3xl md:text-4xl font-bold mb-4 text-gray-900">
    <slot />
  </h1>
  {subtitle && (
    <p class="text-lg text-gray-600">
      {subtitle}
    </p>
  )}
</div>
