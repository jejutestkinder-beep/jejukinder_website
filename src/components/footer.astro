---
import Social from './social.astro';
---

<footer>
  <div class="footer-content">
    <div class="social-links">
      <Social platform="instagram" username="jeju_waldorf_kinder" displayName="제주 발도르프 어린이집" />
      <Social platform="제주자유발도르프학교" url="https://blog.naver.com/jeju_waldorf" displayName="제주자유발도르프학교" />
      <Social platform="youtube" username="@제주발도르프" displayName="제주발도르프" />
    </div>
    <p>© {new Date().getFullYear()} 제주 발도르프 킨더</p>

  </div>
</footer>

<style>
  footer {
    padding: 24px;
    border-top: 1px solid #eee;
    font-size: 14px;
    color: #666;
  }

  .footer-content {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 16px;
  }

  .social-links {
    display: flex;
    gap: 16px;
  }

  @media (max-width: 480px) {
    footer {
      padding: 16px 12px;
    }

    .footer-content {
      flex-direction: column;
      text-align: center;
    }
  }
</style>