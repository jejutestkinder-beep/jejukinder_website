---
interface Props {
  image: ImageMetadata;
  title: string;
  description?: string;
  imageAlt?: string;
}

const { image, title, description, imageAlt = title } = Astro.props;
---

<section class="relative overflow-hidden h-[60vh] min-h-[400px] md:h-[50vh] md:min-h-[300px] w-[calc(100%+48px)] -mx-6 -mt-8 md:-mt-8">
  <img src={image.src} alt={imageAlt} class="absolute inset-0 w-full h-full object-cover" />
  <div class="absolute inset-0 bg-black/40 z-10"></div>
  <div class="absolute top-1/2 left-1/2 -translate-x-1/2 -translate-y-1/2 w-full px-6 text-center z-20">
    <h1 class="text-white drop-shadow-lg m-0 mb-6">{title}</h1>
    {description && (
      <h3 class="text-white drop-shadow-lg m-0 text-xl md:text-2xl font-medium">{description}</h3>
    )}
  </div>
</section>

