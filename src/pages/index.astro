---
import Layout from '../layouts/Layout.astro';
import { getCollection } from 'astro:content';
import mainImage from '../assets/main-hero.png';
import space1 from '../assets/space-1.png';
import space2 from '../assets/space-2.png';
import space3 from '../assets/space-3.png';
import art1 from '../assets/art-1.png';
import art2 from '../assets/art-2.png';
import art3 from '../assets/art-3.png';
import nature1 from '../assets/nature-1.png';
import nature2 from '../assets/nature-2.png';
import nature3 from '../assets/nature-3.png';

const notices = await getCollection('notices');

// popup: true 인 공지들만
const popupCandidates = notices
  .filter((n) => n.data.popup === true)
  // (선택) popup_until이 있으면 만료된 건 제외
  .filter((n) => {
    const anyData = n.data as any;
    const until = anyData.popup_until;
    if (!until) return true;
    // until이 Date로 들어오도록 schema를 z.coerce.date()로 해뒀다면 Date일 것
    try {
      const untilMs = until instanceof Date ? until.getTime() : new Date(until).getTime();
      return Date.now() <= untilMs;
    } catch {
      return true;
    }
  });

// 최신 1개 선택: slug가 "YYYY-MM-DD-..." 형태면 문자열 내림차순이 최신
popupCandidates.sort((a, b) => (a.slug < b.slug ? 1 : a.slug > b.slug ? -1 : 0));

const popupNotice = popupCandidates[0] ?? null;

let PopupContent: any = null;
if (popupNotice) {
  const rendered = await popupNotice.render();
  PopupContent = rendered.Content;
}
---

<Layout title="제주 발도르프 킨더">
  {popupNotice && (
    <>
      <!-- 팝업 오버레이 -->
      <div id="popup-overlay" class="popup-overlay" style="display: none;">
        <div class="popup-modal" role="dialog" aria-modal="true" aria-label="공지 팝업">
          <div class="popup-header">
            <strong class="popup-title">{popupNotice.data.title}</strong>
            <button id="popup-close" class="popup-close" type="button" aria-label="닫기">✕</button>
          </div>

          <div class="popup-body">
            <PopupContent />
          </div>

          <div class="popup-actions">
            <button id="popup-hide-today" class="popup-btn" type="button">오늘 하루 보지 않기</button>
            <button id="popup-close-2" class="popup-btn primary" type="button">닫기</button>
          </div>
        </div>
      </div>

      <!-- 홈에서만 실행되는 팝업 스크립트 -->
      <script is:inline define:vars={{ slug: popupNotice.slug }}>
        document.addEventListener("DOMContentLoaded", () => {
          const overlay = document.getElementById("popup-overlay");

          if (!overlay) return;

          const todayKey = new Date().toISOString().slice(0, 10); // YYYY-MM-DD
          const storageKey = `kinder_popup_hide_${slug}`;

          const hide = () => {
            overlay.style.display = "none";
            document.body.style.overflow = "";
          };

          const show = () => {
            overlay.removeAttribute("hidden");
            overlay.style.display = "flex";
            document.body.style.overflow = "hidden";
          };

          // 오늘 숨김 처리 체크
          const stored = localStorage.getItem(storageKey);
          if (stored === todayKey) {
            hide();
            return;
          }

          // 처음 표시
          show();

          // 닫기 버튼들
          const closeBtn1 = document.getElementById("popup-close");
          const closeBtn2 = document.getElementById("popup-close-2");
          const hideTodayBtn = document.getElementById("popup-hide-today");

          if (closeBtn1) {
            closeBtn1.addEventListener("click", () => {
              hide();
            });
          }

          if (closeBtn2) {
            closeBtn2.addEventListener("click", () => {
              hide();
            });
          }

          if (hideTodayBtn) {
            hideTodayBtn.addEventListener("click", () => {
              localStorage.setItem(storageKey, todayKey);
              hide();
            });
          }

          // 바깥(오버레이) 클릭하면 닫기
          overlay.addEventListener("click", (e) => {
            if (e.target === overlay) {
              hide();
            }
          });

          // ESC로 닫기
          document.addEventListener("keydown", (e) => {
            if (e.key === "Escape") hide();
          });
        });
      </script>
    </>
  )}

  <!-- ======= 홈 콘텐츠 ======= -->
  <section class="hero-section">
    <img src={mainImage.src} alt="제주 발도르프 킨더" class="hero-image" />
    <div class="hero-content">
      <h2>아이들이 꽃처럼 피어나는 곳</h2>
      <h1>제주 발도르프 킨더</h1>
      <a href="/admission/" class="hero-cta">입학 문의</a>
    </div>
  </section>

  <section class="image-section">
    <h1>아름다운 공간에서</h1>
    <div class="image-grid">
      <img src={space1.src} alt="공간 1" />
      <img src={space2.src} alt="공간 2" />
      <img src={space3.src} alt="공간 3" />
    </div>
  </section>

  <section class="image-section">
    <h1>예술적인 교육을</h1>
    <div class="image-grid">
      <img src={art1.src} alt="예술 교육 1" />
      <img src={art2.src} alt="예술 교육 2" />
      <img src={art3.src} alt="예술 교육 3" />
    </div>
  </section>

  <section class="image-section">
    <h1>자연과 더불어</h1>
    <div class="image-grid">
      <img src={nature1.src} alt="자연 1" />
      <img src={nature2.src} alt="자연 2" />
      <img src={nature3.src} alt="자연 3" />
    </div>
  </section>

  <section>
    <h1>킨더 입학 문의</h1>
    <a href="/admission/">문의하기</a>
  </section>

  <style>
    .hero-section {
      position: relative;
      width: 100%;
      overflow: hidden;
    }
    .hero-image {
      width: 100%;
      height: 100vh;
      min-height: 600px;
      object-fit: cover;
      display: block;
    }
    .hero-content {
      position: absolute;
      top: 50%;
      left: 50%;
      transform: translate(-50%, -50%);
      text-align: center;
      color: white;
      z-index: 1;
      width: 100%;
      padding: 0 24px;
    }
    .hero-content h2 {
      margin: 0 0 16px 0;
      font-size: 1.5rem;
      color: white;
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }
    .hero-content h1 {
      margin: 0 0 32px 0;
      font-size: 3rem;
      color: white;
      text-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
    }
    .hero-cta {
      display: inline-block;
      padding: 14px 32px;
      background: #222;
      color: white;
      text-decoration: none;
      border-radius: 8px;
      font-size: 1.1rem;
      transition: background 0.2s;
    }
    .hero-cta:hover {
      background: #444;
    }
    .hero-section::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background: rgba(0, 0, 0, 0.3);
      z-index: 0;
    }
    
    @media (max-width: 768px) {
      .hero-image {
        min-height: 500px;
      }
      .hero-content h2 {
        font-size: 1.2rem;
      }
      .hero-content h1 {
        font-size: 2rem;
      }
      .hero-cta {
        padding: 12px 24px;
        font-size: 1rem;
      }
    }
    .image-section {
      padding: 60px 24px;
      text-align: center;
    }
    .image-section h1 {
      margin-bottom: 40px;
    }
    .image-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
      gap: 24px;
      max-width: 1200px;
      margin: 0 auto;
    }
    
    @media (max-width: 768px) {
      .image-grid {
        grid-template-columns: 1fr;
      }
    }
    .image-grid img {
      width: 100%;
      aspect-ratio: 4 / 3;
      object-fit: cover;
      border-radius: 12px;
      display: block;
    }
    .image-placeholder {
      width: 100%;
      height: 300px;
      background: #f0f0f0;
      border-radius: 12px;
      display: flex;
      align-items: center;
      justify-content: center;
      color: #999;
    }

    .popup-overlay {
      position: fixed;
      inset: 0;
      background: rgba(0,0,0,0.45);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      z-index: 9999;
    }
    .popup-modal {
      width: min(720px, 100%);
      background: white;
      border-radius: 16px;
      overflow: hidden;
      box-shadow: 0 20px 60px rgba(0,0,0,0.25);
    }
    .popup-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: 12px;
      padding: 16px 18px;
      border-bottom: 1px solid #eee;
    }
    .popup-title {
      font-size: 16px;
    }
    .popup-close {
      border: 0;
      background: transparent;
      font-size: 18px;
      cursor: pointer;
      padding: 6px 8px;
      line-height: 1;
    }
    .popup-body {
      padding: 16px 18px;
      max-height: 55vh;
      overflow: auto;
    }
    .popup-actions {
      display: flex;
      justify-content: flex-end;
      gap: 10px;
      padding: 14px 18px;
      border-top: 1px solid #eee;
    }
    .popup-btn {
      border: 1px solid #ddd;
      background: #fff;
      padding: 10px 12px;
      border-radius: 10px;
      cursor: pointer;
      font-size: 14px;
    }
    .popup-btn.primary {
      border-color: #222;
      background: #222;
      color: white;
    }
  </style>
</Layout>