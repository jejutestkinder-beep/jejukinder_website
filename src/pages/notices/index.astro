---
import { getCollection } from 'astro:content';
const notices = await getCollection('notices');
---

<!doctype html>
<html lang="ko">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>공지사항</title>
  </head>
  <body>
    <h1>공지사항</h1>
    <ul>
      {notices.map((n) => (
        <li>
          <a href={`/notices/${n.slug}/`}>{n.data.title}</a>
        </li>
      ))}
    </ul>
  </body>
</html>
