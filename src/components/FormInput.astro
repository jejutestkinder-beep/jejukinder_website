---
interface Props {
  label: string;
  name: string;
  type?: 'text' | 'email' | 'tel' | 'number';
  required?: boolean;
  placeholder?: string;
  value?: string;
}

const { label, name, type = 'text', required = false, placeholder, value } = Astro.props;
const id = name;
---

<div class="form-field">
  <label for={id} class="form-label">
    {label}
    {required && <span class="text-custom-rose">*</span>}
  </label>
  <input
    type={type}
    id={id}
    name={name}
    required={required}
    placeholder={placeholder}
    value={value}
    class="form-input"
  />
</div>
