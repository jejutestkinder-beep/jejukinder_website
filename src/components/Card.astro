---
/**
 * Card Component
 * 
 * 범용 카드 컴포넌트입니다. 문의 폼, 에러/성공 메시지 등에 사용됩니다.
 * 
 * Note: FeatureCard와는 다릅니다.
 * - Card: 범용 카드 (문의 페이지 등에서 사용)
 * - FeatureCard: 이미지와 설명이 있는 특정 카드 (CardSection 내부에서 사용)
 */
interface Props {
  hover?: boolean;
  class?: string;
}

const { hover = false, class: className = '' } = Astro.props;

const baseClasses = 'bg-white rounded-lg shadow-sm border border-gray-200 p-6';
const hoverClasses = hover ? 'transition-shadow hover:shadow-md' : '';
---

<div class={`${baseClasses} ${hoverClasses} ${className}`}>
  <slot />
</div>
