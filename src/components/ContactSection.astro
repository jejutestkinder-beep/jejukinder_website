---
interface Props {
  title: string;
  linkText: string;
  linkUrl: string;
}

const { title, linkText, linkUrl } = Astro.props;
---

<section class="contact-section">
  <h1>{title}</h1>
  <a href={linkUrl}>{linkText}</a>
</section>

<style>
  .contact-section {
    padding: 60px 24px;
    text-align: center;
  }
  .contact-section h1 {
    margin-bottom: 24px;
  }
  .contact-section a {
    display: inline-block;
    padding: 14px 32px;
    background: #222;
    color: white;
    text-decoration: none;
    border-radius: 8px;
    font-size: 1.1rem;
    transition: background 0.2s;
  }
  .contact-section a:hover {
    background: #444;
  }
</style>
